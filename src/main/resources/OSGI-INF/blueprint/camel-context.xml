					<property name="byteLength" value="8" />
					<property name="unicodeByteLength" value="16" />
				</bean>
				<bean
					class="org.fusesource.camel.component.sap.model.rfc.impl.ListFieldMetaDataImpl">
					<property name="name" value="TICKET_PRICE" />
